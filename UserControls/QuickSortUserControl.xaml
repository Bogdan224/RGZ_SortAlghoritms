<UserControl x:Class="RGZ_SortAlghoritms.UserControls.QuickSortUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RGZ_SortAlghoritms.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Quick Sort" HorizontalAlignment="Center"
                       FontSize="50"/>
            <TextBlock x:Name="quickSortDescriptionTextBlock" HorizontalAlignment="Left"
                       FontSize="14" TextWrapping="Wrap"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" >
            <StackPanel x:Name="sortedListStackPanel" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            </StackPanel>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom">
            <Button x:Name="arrayButton" Height="30" VerticalAlignment="Bottom"
                    Content="Создать массив" Click="CreateArray_Click"/>
            <Button x:Name="alghoritmButton" Height="30" VerticalAlignment="Bottom"
                    Content="Сортировать" Click="Sort_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
